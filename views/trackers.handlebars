  <body onload="init()">
        {{>navbar}}

    <h4 style = "text-align:center">your trackers</h4>
    <h6 style = "text-align:center">//</h6>
    <h5 style = "text-align:center">turn on, delete, edit, or turn on a new tracker</h5>
    <br>
     <center>
     <form class="container">
    <input class ="btn-group" style = "background-color: #e7e7e7;" type="button" id="addTracker" value="Add a new Tracker"></input>
  </form>
  </center>
        <br>
    <center>
    <ul class="container" id="trackerList">
      {{#each trackers}} 
        <li>Name: {{name}} - Tracker#: {{number}} - Range: {{range}}</li>
      {{/each}}
    </ul>
  </center>
 
  <br>
  <center>
  <button class="container"><a href="/homepage">Back to Home</a></button>
  <!--The add tracker window dialog-->
  </center>
  <dialog id="tDialog" style="text-align:left;">
    <form>
      <h4 style = "text-align:center">Tracker Info</h6>
      Name:<input type="text" id="tName" name="tName"><br />
      Device Number:<input type="text" id="tNum" name="tNum"><br/>
      Range (1-10mi): 

      <input type="range" name="rangeInput" min="0" max="10" step="1" list ="steplist" id="tRange" onchange="updateTextInput(this.value);">
      <input type="text" id="textInput" name="textInput">
      <datalist id="steplist">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
      </datalist>
      <br />
      <input type="button" id="tCancel" value="Cancel">
      <input type="button" id="tSave" value="Save"></input> 
    </form>
      </dialog>

      <dialog id="dDialog" style="text-align:center;">
      <form>
      <label>Delete tracker?</label><br />
      <input type="button" id="dCancel" value="Cancel"></input>
      <input type="button" id="dOk" value="Ok"></input> 
    </form>
  </dialog>
  
  <!--The cancel confirm dialog-->
  

